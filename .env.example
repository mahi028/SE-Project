# Environment variables for production
# Copy this file to .env and update the values

# Database Configuration
POSTGRES_DB=ezcare
POSTGRES_USER=ezcare_user
POSTGRES_PASSWORD=ezcare_password_change_this

# Backend Configuration
SECRET_KEY=your_super_secret_key_change_in_production_with_random_string
JWT_SECRET_KEY=your_jwt_secret_key_change_in_production_with_random_string
SQLALCHEMY_DATABASE_URI=postgresql://ezcare_user:ezcare_password_change_this@db:5432/ezcare

# Frontend Configuration
FRONTEND_BASE_URL=http://localhost:8080


# Mail Configuration (optional, for development you can use mailhog)
MAIL_SERVER=localhost
MAIL_PORT=1025
MAIL_DEFAULT_SENDER=no-reply@ezcare.com
